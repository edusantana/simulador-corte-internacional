= form_for ([@grupo, @turma]) do |f|
  -if @turma.errors.any?
    #error_explanation
      %h2= "#{pluralize(@turma.errors.count, "error")} prohibited this turma from being saved:"
      %ul
        - @turma.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .actions
    = f.submit (t('Save'))
